<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/general_parent_margin"
    android:background="@drawable/bg_full_white_blue_rad5"
    android:layout_marginVertical="@dimen/general_parent_padding"
    android:layout_marginHorizontal="@dimen/general_parent_margin">

    <ImageView
        android:id="@+id/iv_author_movie_detail_item"
        android:layout_width="@dimen/general_image_profile_size"
        android:layout_height="@dimen/general_image_profile_size"
        android:contentDescription="@null"
        android:src="@drawable/ic_default_image"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_name_author_movie_detail_item"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/general_parent_margin"
        android:textSize="@dimen/size_text_title3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_author_movie_detail_item"
        app:layout_constraintTop_toTopOf="@+id/iv_author_movie_detail_item"
        tools:text="Tri Witanto"/>

    <TextView
        android:id="@+id/tv_content_author_movie_detail_item"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general_parent_padding"
        android:layout_marginHorizontal="@dimen/general_parent_margin"
        android:textSize="@dimen/size_text_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_author_movie_detail_item"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_author_movie_detail_item"
        tools:text="this movie is very good and memorable in my life"/>


</androidx.constraintlayout.widget.ConstraintLayout>