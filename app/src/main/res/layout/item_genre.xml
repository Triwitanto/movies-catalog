<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_genre_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="@dimen/general_parent_padding"
    android:layout_marginVertical="@dimen/general_parent_padding"
    app:cardCornerRadius="@dimen/general_card_view_radius"
    app:cardElevation="@dimen/general_card_view_elevation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_genre_inisial_item"
            android:layout_width="@dimen/general_floating_action_button_size"
            android:layout_height="@dimen/general_floating_action_button_size"
            android:layout_margin="@dimen/general_parent_margin"
            android:textSize="@dimen/size_text_header1"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:maxLength="1"
            android:gravity="center"
            android:background="@drawable/ic_circle_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Mudah"/>


        <TextView
            android:id="@+id/tv_genre_name_item"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:padding="@dimen/general_parent_margin"
            android:textSize="@dimen/size_text_title3"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_genre_inisial_item"
            tools:text="Action"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>